pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh ' echo "build the app"! '
            }
        }
        stage('Test') {
            steps {
                sh ' echo "run some tests" '
            }
        }
        stage('Deploy') {
            steps {
                sh ' echo "deploy to linode!" '
            }
        }
    }
}
