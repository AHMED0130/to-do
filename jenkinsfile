pipeline {
    agent any
    stages {
        stage('inital')
        {
            steps {
               script {
                jv = load "script.groovy"
               }
            }
        }
        stage('Build image') 
        {
            steps {
                script {
                        jv.buildApp()
                    }
                }
        }
        
        stage('Test') 
        {
            steps {
                script {
                        jv.testApp()
                    }
            }
        }
        stage('Deploy') 
        {
            steps {
                script {
                        jv.deployApp()
                    }
            }
        }
    }

}