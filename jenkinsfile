pipeline {
    agent any
    environment {
        IMAGE_NAME = 'ahmed0130/todo-app:1.0-snapshot'
        EC2_INSTANCE_IP = '13.53.187.202'
    }
    stages {
        stage('Test') {
            steps {
                script {
                    echo "test the application......"
                }
            }
        }
        stage('Build image') {
            steps {
                script {
                    echo "build the app image "

                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials',
                        usernameVariable: 'USERNAME', passwordVariable: 'PASS')]) {
                        sh "docker build -t $IMAGE_NAME ."
                        sh 'echo $PASS | docker login -u $USERNAME --password-stdin'
                        sh "docker push $IMAGE_NAME"
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo "deploying the application to ec2 instance"
                    def dockercmd="docker run -d -p 8000:8000 --name todo-app ${IMAGE_NAME}"
                    sshagent(['ec2-aws-server']) {
                        sh "ssh -o StrictHostKeyChecking=no ec2-user@${EC2_INSTANCE_IP} ${dockercmd}"
    
                            }
                }
            }
        }
    }
}
