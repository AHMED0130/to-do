pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh ' echo "build the app"! '
                sh 'pip --version '
                sh 'python3 --version'
            }
        }
        stage('Test') {
            steps {
                sh ' echo "run some tests" '
            }
        }
        stage('Deploy') {
            steps {
                sh ' echo "deploy to linode!" '
            }
        }
    }
}
